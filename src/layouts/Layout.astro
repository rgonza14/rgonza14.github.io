---
import './../styles/global.css';
const { lang, title, description } = Astro.props as {
    lang: 'es' | 'en';
    title: string;
    description: string;
};
---

<html lang={lang} class='h-full'>
    <head>
        <meta charset='utf-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1' />
        <title>{title}</title>
        <meta name='description' content={description} />
    </head>

    <body class='h-full text-white/90'>
        <slot />
    </body>
</html>
