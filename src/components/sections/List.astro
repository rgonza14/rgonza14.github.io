---
type Item = {
    title: string;
    meta?: string;
    description?: string;
    bullets?: string[];
    time: string;
};

type FM = {
    id: string;
    title: string;
    items?: Item[];
};

const { frontmatter } = Astro.props as { frontmatter: FM };

const { id, title, items = [] } = frontmatter;
---

<section id={id} class='flex flex-col gap-8 scroll-mt-20'>
    <h2 class='tracking-wide text-cyan-300'>{title}</h2>

    <div class='flex flex-col gap-10'>
        {
            items.map(it => (
                <article class='relative flex flex-col gap-3'>
                    <header class='flex flex-col gap-1'>
                        <div class='flex items-center justify-between gap-3 flex-col md:flex-row'>
                            <strong class='text-base text-white font-bold'>
                                {it.title}
                            </strong>
                            <span class=' text-sm whitespace-nowrap text-white/90'>
                                {it.time}
                            </span>
                        </div>

                        {it.meta && (
                            <div class='flex flex-wrap items-center gap-2 text-sm text-cyan-300'>
                                <span>{it.meta}</span>
                            </div>
                        )}
                    </header>

                    {it.description && (
                        <p class='text-white/65 max-w-[820px]'>
                            {it.description}
                        </p>
                    )}

                    {Array.isArray(it.bullets) && it.bullets.length > 0 && (
                        <ul class='mt-2 flex flex-col gap-2'>
                            {it.bullets.map(b => (
                                <li class='relative pl-5 text-sm  leading-relaxed'>
                                    <span class='absolute left-0 top-[7px] h-1.5 w-1.5 rounded-full bg-cyan-400' />
                                    <span class='text-white/90'>{b}</span>
                                </li>
                            ))}
                        </ul>
                    )}
                </article>
            ))
        }
    </div>
</section>
