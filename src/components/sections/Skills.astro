---
type Group = { label: string; items: string[] };

type FM = {
    id: string;
    title: string;
    groups?: Group[];
};

const { frontmatter } = Astro.props as { frontmatter: FM };

const { id, title, groups = [] } = frontmatter;
---

<section id={id} class='flex flex-col gap-8 scroll-mt-20'>
    <header class='flex items-center justify-between'>
        <h2 class='text-white font-semibold tracking-wide'>{title}</h2>
    </header>

    <div class='grid gap-6 sm:grid-cols-2 lg:grid-cols-3'>
        {
            groups.map(g => (
                <article class='flex flex-col gap-4  border p-5 rounded-2xl border-white/10 bg-white/[0.02] '>
                    <header class='flex items-center justify-between'>
                        <h3 class='text-[12px] font-semibold uppercase tracking-[0.18em] text-white/90'>
                            {g.label}
                        </h3>
                        <span class='text-[11px] text-cyan-300'>
                            {g.items.length}
                        </span>
                    </header>

                    <div class='h-px w-full bg-white/10' />

                    <ul class='flex flex-wrap gap-2'>
                        {g.items.map(item => (
                            <li class='rounded-md border border-white/10 bg-black/20 px-3 py-1 text-[12px] text-white/90'>
                                {item}
                            </li>
                        ))}
                    </ul>
                </article>
            ))
        }
    </div>
</section>
