---
interface ButtonsProps {
    href: string;
}

const { href } = Astro.props as ButtonsProps;
---

<a
    href={href}
    target='_blank'
    rel='noreferrer'
    class='inline-flex items-center justify-center rounded-xl border border-cyan-400/30 bg-cyan-400/10 px-4 py-2 text-[12px] font-semibold text-cyan-200 transition hover:bg-cyan-400/15 hover:border-cyan-300/50'
>
    <slot />
</a>
